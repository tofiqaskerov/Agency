@model List<Category>

@if (ViewBag.CategoryExist !=null )
{
    <div class = "alert alert-danger">@ViewBag.CategoryExist</div>
}


<form enctype = "multipart/form-data" method="post">
    <div class="container">
        <div class="row">
            <div class="input-group my-2">
                <input name="Name" id="title" class="form-control" type="text" placeholder="Name" />
            </div>
            <input type="submit" class="btn btn-outline-success" value="Create" />
        </div>
    </div>
</form>