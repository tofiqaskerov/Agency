@model IEnumerable<Category>




    <a href="/dashboard/category/create" class="btn btn-outline-success my-4">Create</a>


@if(Model != null){
<table class="table table-bordered table-striped table-dark">

    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>


        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <a href="/dashboard/category/edit/@category.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                    <a href="/dashboard/category/delete/@category.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                </td>
            </tr>
        }


    </tbody>
</table>
}
else
{
<div class="alert alert-info">Bazada melumat yoxdur</div>
}



