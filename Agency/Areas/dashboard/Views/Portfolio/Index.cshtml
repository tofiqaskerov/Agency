@model List<Portfolio>






    <a class="btn btn-success mb-4" href="/dashboard/portfolio/create">Create</a>







    <table class="table table-bordered table-striped table-dark">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Category</th>
            <th>Photo</th>


        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <th>@item.Category.Name</th>
                <td>
                    <img src = "~/@item.PhotoURL" width="150"  />
                </td>
                
                <td>
                    <a href="/dashboard/banner/edit/@item.Id" class="btn btn-outline-warning btn-sm ">Edit</a>
                    <a href="/dashboard/banner/detail/@item.Id" class="btn btn-outline-info btn-sm">Detail</a>
                    <a href="/dashboard/banner/delete/@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                </td>
            </tr>
        }




    </table>



