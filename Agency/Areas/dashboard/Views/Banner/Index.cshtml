@model Banner


@if (Model  == null)
{
    <a class="btn btn-success mb-4" href="/dashboard/banner/create">Create</a>
}



@if (Model != null)
{


    <table class="table table-bordered table-striped table-dark">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Img</th>
            <th>Action</th>

        </tr>


        <tr>
            <td>@Model.Id</td>
            <td>@Model.Title</td>
            <td>
                <img src="~/@Model.PhotoURL" width="150" class="img-fluid" />
            </td>
            <td>
                <a href="/dashboard/banner/edit/@Model.Id" class="btn btn-outline-warning btn-sm ">Edit</a>
                <a href="/dashboard/banner/detail/@Model.Id" class="btn btn-outline-info btn-sm">Detail</a>
                <a href="/dashboard/banner/delete/@Model.Id" class="btn btn-outline-danger btn-sm">Delete</a>
            </td>
        </tr>



    </table>

}
else
{
    <div class = "alert alert-info">Bazada melumat yoxdur</div>
}
